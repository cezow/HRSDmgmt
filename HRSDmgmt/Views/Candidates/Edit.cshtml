@model HRSDmgmt.Models.Candidate

@{
    ViewData["Title"] = "Edit";
}


<h4 class="text-secondary mt-2">Edycja</h4>
<hr />

<div class="d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CandidateId" />
            <div class="form-group  mb-2">
                <label asp-for="OfferId" class="control-label text-secondary"></label>
                <select asp-for="OfferId" class="form-control" asp-items="ViewBag.OfferId"></select>
                <span asp-validation-for="OfferId" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="EmployeeId" class="control-label text-secondary"></label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-around mt-3">
                <div class="form-group">
                    <input type="submit" value="Zapisz" class="btn btn-primary rounded-5" />
                </div>
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-5">Anuluj</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
