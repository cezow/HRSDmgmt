@model HRSDmgmt.Models.Candidate

@{
    ViewData["Title"] = "Details";
}


<div>
    <h4 class ="text-secondary mt-2">Szczegóły</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Offer)
        </dt>
        <dd class = "col-sm-10">
            id @Html.DisplayFor(model => model.Offer.OfferId): @Html.DisplayFor(model => model.Offer.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class = "col-sm-10">
            id @Html.DisplayFor(model => model.Employee.EmployeeId): @Html.DisplayFor(model => model.Employee.FullName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CandidateId" class="btn btn-primary rounded-5">Edytuj</a>
    <a asp-action="Index" class="btn btn-outline-secondary rounded-5">Powrót</a>
</div>

