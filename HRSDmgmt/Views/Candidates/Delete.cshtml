@model HRSDmgmt.Models.Candidate

@{
    ViewData["Title"] = "Delete";
}


<h3 class="text-secondary mt-2">Usuwanie</h3>
<h4 class="text-danger">Czy na pewno chcesz usunąć?</h4>
<hr />

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Offer)
        </dt>
        <dd class = "col-sm-10">
            id @Html.DisplayFor(model => model.Offer.OfferId): @Html.DisplayFor(model => model.Offer.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class = "col-sm-10">
            id @Html.DisplayFor(model => model.Employee.EmployeeId): @Html.DisplayFor(model => model.Employee.FullName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CandidateId" />
        <input type="submit" value="Usuń" class="btn btn-danger rounded-5" />
        <a asp-action="Index" class="btn btn-outline-secondary rounded-5">Anuluj</a>
    </form>
</div>
