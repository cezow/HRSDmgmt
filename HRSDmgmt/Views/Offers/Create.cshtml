@model HRSDmgmt.Models.Offer

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Offer</h4>
<hr />

<div>
    <form asp-action="Create">
        <div class="row d-flex justify-content-center">
            <div class="col-md-6 col-xl-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group m-3">
                    <label asp-for="Description" class="control-label text-secondary"></label>
                    <textarea id="editor" asp-for="Description" class="form-control" ></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 col-xl-4">
                <div class="form-group m-3">
                    <label asp-for="Name" class="control-label text-secondary"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <label asp-for="AddDate" class="control-label text-secondary">Publikacja (dziś)</label>
                    <input asp-for="AddDate" class="form-control" />
                    <span asp-validation-for="AddDate" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <label asp-for="Vacancy" class="control-label text-secondary"></label>
                    <input asp-for="Vacancy" class="form-control" />
                    <span asp-validation-for="Vacancy" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <label asp-for="StartDate" class="control-label text-secondary"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <label asp-for="EndDate" class="control-label text-secondary"></label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                @if (User.IsInRole("admin") || User.IsInRole("user"))
                {
                <div class="form-group form-check m-3">
                    <label class="form-check-label text-secondary">
                        <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                    </label>
                </div>
                }
                <div class="form-group form-check m-3">
                   <label class="form-check-label text-secondary">
                        <input class="form-check-input" asp-for="Display" /> @Html.DisplayNameFor(model => model.Display) 
                        <a href="#" data-toggle="modal" data-target="#rulesModal"> Regulamin </a>
                   </label>
                </div>
                @if (User.IsInRole("admin") || User.IsInRole("user"))
                {
                <div class="form-group m-3">
                        <label asp-for="CompanyId" class="control-label text-secondary"></label>
                    <select asp-for="CompanyId" class ="form-control" asp-items="ViewBag.CompanyId"></select>
                </div>
                }
            </div>
            <div class="d-flex justify-content-center">
                <div class="form-group mt-4 mx-2">
                    <input type="submit" value="Wyślij" class="btn btn-success rounded-5 shadow" />
                </div>
                <div class="mt-4 mx-2">
                    <a asp-action="Index" class="btn btn-outline-danger rounded-5 shadow">Anuluj</a>
                </div>
            </div>
        </div>
    </form>
</div>



